{
    "compilerOptions": {
        "baseUrl": "./src/",
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "moduleResolution": "node",
        "noUnusedLocals": false,
        "module": "commonjs",
        "target": "esnext",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "declaration": true,
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017",
            "esnext.asynciterable"
        ]
    },
    "include": [
        "src/",
        "tests",
        "scripts"
    ],
    "exclude": [
        "node_modules"
    ]
}
